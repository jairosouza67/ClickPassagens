# Configuração da API Backend
# Em desenvolvimento local:
VITE_API_BASE_URL=http://127.0.0.1:5001/api

# Em produção (Netlify):
# VITE_API_BASE_URL=https://clickpassagens-api.onrender.com/api

# Configuração das APIs de voo
FLIGHT_API_MODE=production
# Defina como true apenas se quiser usar dados simulados quando as APIs reais falharem
FLIGHT_API_ALLOW_FALLBACK=false
AMADEUS_RATE_LIMIT_ALERT_THRESHOLD=100

# Modo da aplicação (frontend)
VITE_APP_MODE=development
# Define se o frontend deve mostrar dados simulados (ex.: em demos)
VITE_ENABLE_FAKE_RESULTS=false

# Firebase Configuration
# ⚠️ NUNCA commite estas credenciais no Git!
# Copie este arquivo para .env e preencha com suas credenciais reais
VITE_FIREBASE_API_KEY=sua_api_key_aqui
VITE_FIREBASE_AUTH_DOMAIN=seu_projeto.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=seu_projeto_id
VITE_FIREBASE_STORAGE_BUCKET=seu_projeto.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abc123def456

# ⚠️ IMPORTANTE: 
# No Netlify, configure essas variáveis em:
# Site settings > Environment variables
